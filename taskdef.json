      "image": "325661605180.dkr.ecr.us-east-1.amazonaws.com/popcorn-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "FLASK_ENV",
          "value": "production"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql+psycopg2://postgres:69h679M7e9raY268beJF@database-1.cql4kouiikp3.us-east-1.rds.amazonaws.com:5432/postgres"
        },
        {
          "name": "JWT_SECRET_KEY",
          "value": "clave-super-secreta-cambiar-en-produccion"
        },
        {
          "name": "STATIC_JWT_TOKEN",
          "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjoic3RhdGljLXVzZXIiLCJyb2xlIjoiYWRtaW4ifQ.6bUHdYJk1cRnn-SVZEXAMPLEpR0fZ2mJb_YWbl8pW1lM"
        },
        {
          "name": "NEW_RELIC_CONFIG_FILE",
          "value": "/app/newrelic.ini"
        }
      ],
      "secrets": [{
        "name": "NEW_RELIC_LICENSE_KEY",
        "valueFrom": "arn:aws:ssm:us-east-1:325661605180:parameter/newrelic/license"
      }],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/popcorn-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}

